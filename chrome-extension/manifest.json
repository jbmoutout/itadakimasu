{
  "manifest_version": 3,
  "name": "Itadakimasu Recipe Importer",
  "version": "1.0",
  "description": "Import recipes from bookmarks to Itadakimasu",
  "permissions": [
    "bookmarks",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "http://localhost:3002/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3002/*"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 